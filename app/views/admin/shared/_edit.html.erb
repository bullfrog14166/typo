<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @merge_enabled %>
	<%= form_tag({:action => "merge", :id => @article.id}, :enctype => "multipart/form-data", :class => className) do %>
		<h4><%= _("Merge Articles") %></h4>
		<%= _("Article ID ") %><%= text_field_tag 'merge_with' %>
		<div><%= submit_tag 'Merge' %></div>
	<% end %>
<% end %>
